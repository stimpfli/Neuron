cmake_minimum_required(VERSION 2.6)
project(Neuron)
set(CMAKE-CXX-FLAGS "-03 -W -Wall -pedantic -std=c++11")

enable_testing()
add_subdirectory(gtest)
include_directories(${gtest_SOURCE_DIR}/include${gtest_SOURCE_DIR})

add_executable (neuron Neuron.cpp Neuronmain.cpp Network.cpp)
add_executable (neurontest neurontest.cpp)

target_link_libraries(neurontest gtest gtest_main)
add_test(neurontest neurontest)

